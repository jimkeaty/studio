
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow an authenticated user to read their own dashboard document.
    match /dashboards/{userId}/agent/{year} {
      allow read: if request.auth != null;
      allow write: if false; // Writes are handled by backend functions
    }
    
    // Allow users to write their own daily logs and business plans
    match /users/{userId}/dailyLogs/{logId} {
      allow write: if request.auth.uid == userId;
    }

    match /users/{userId}/plans/{planId} {
      allow write: if request.auth.uid == userId;
    }
  }
}
