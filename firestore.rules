
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow any authenticated user to read from the dashboards collection for now.
    match /dashboards/{userId}/agent/{year} {
      allow read: if request.auth != null;
      // Deny writes to prevent accidental modification from client.
      allow write: if false;
    }
    
    // Default-deny all other reads for security.
    match /{path=**} {
      allow read: if false;
      // Allow writes if authenticated for other collections (like dailyLog)
      allow write: if request.auth != null;
    }
  }
}
