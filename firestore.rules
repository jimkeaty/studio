
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Agents can only read their own dashboard data.
    match /dashboards/{userId}/agent/{year} {
      allow read: if request.auth.uid == userId;
      // Deny writes to prevent accidental modification from client.
      allow write: if false;
    }
    
    // Allow writes for authenticated users to other collections (like dailyLog)
    // This is a broad rule and should be refined in a production app.
    match /{path=**} {
      allow write: if request.auth != null;
    }
  }
}
