
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // By default, deny all reads and writes.
    match /{document=**} {
      allow read, write: if false;
    }

    // WARNING: This is an insecure rule for debugging purposes only.
    // It allows any client to read agent dashboard data.
    // This should be changed back to: allow read: if request.auth != null;
    match /dashboards/{userId}/agent/{year} {
      allow read: if true;
    }
  }
}
