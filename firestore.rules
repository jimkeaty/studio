
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Agents can only READ their own aggregated dashboard document for any year.
    // This data is generated by a backend process and is read-only for the user.
    // This is where imported historical data should live.
    match /dashboards/{userId}/agent/{year} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if false; // Only backend processes can write here.
    }
    
    // Agents can only WRITE to their own daily logs collection.
    match /users/{userId}/dailyLogs/{logId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Agents can only WRITE to their own plans collection.
    match /users/{userId}/plans/{planId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
