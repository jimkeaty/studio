
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // This is a temporary, insecure rule for debugging purposes.
    // It allows any read request to the dashboards collection.
    match /dashboards/{userId}/agent/{year} {
      allow read: if true; 
      allow write: if false;
    }
    
    // Allow writes for authenticated users to other collections (like dailyLog)
    // This is a broad rule and should be refined in a production app.
    match /{path=**} {
      allow write: if request.auth != null;
    }
  }
}
