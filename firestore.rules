
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // WARNING: This is an insecure rule for debugging purposes ONLY.
    // It makes your entire database publicly readable.
    // This should be reverted to a secure state as soon as possible.
    match /{document=**} {
      allow read: if true;
      allow write: if request.auth != null; // Keep writes protected
    }
  }
}
