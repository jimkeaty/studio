
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow an authenticated user to read their own dashboard document.
    match /dashboards/{userId}/agent/{year} {
      allow read: if request.auth.uid == userId;
      allow write: if false; // Writes are handled by backend functions
    }
    
    // Allow writes for authenticated users to other collections (like dailyLog)
    // This is a broad rule and should be refined in a production app.
    match /users/{userId}/{path=**} {
      allow write: if request.auth.uid == userId;
    }
  }
}
