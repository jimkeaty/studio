
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Agents can only read their own dashboard data.
    match /dashboards/{userId}/agent/{year} {
      // Temporarily allow any authenticated user to read, for debugging.
      allow read: if request.auth != null;
      // Deny writes to prevent accidental modification from client.
      allow write: if false;
    }
    
    // Default-deny all other reads for security.
    match /{path=**} {
      allow read: if false;
      // Allow writes if authenticated for other collections (like dailyLog)
      allow write: if request.auth != null;
    }
  }
}
