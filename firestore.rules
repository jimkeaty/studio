
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // By default, deny all reads and writes.
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow any authenticated user to read from an agent's yearly dashboard document.
    // For a production app with sensitive data, you would restrict this further,
    // for example: allow read: if request.auth.uid == userId;
    match /dashboards/{userId}/agent/{year} {
      allow read: if request.auth != null;
    }
  }
}
